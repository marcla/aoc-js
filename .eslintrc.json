{
  "root": true,
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["eslint:recommended", "airbnb"],
      "rules": {
        "no-bitwise": "off",
        "no-lonely-if": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "no-loop-func": "off",
        "no-restricted-syntax": "off",
        "import/extensions": "always"
      }
    }
  ]
}
